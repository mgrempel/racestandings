<h1><%= @driver.last_name %>, <%= @driver.first_name %></h1>
<h3>Born: <%= @driver.dob %></h3>
<h3>Nationality: <%= @driver.nationality %></h3>
<h3>Wiki Article: <a href="<%= @driver.url %>">Article</a></h3>

<h3>Laptimes</h3>
<ul>
  <% @driver.laptimes.each do |laptime| %>
    <li><%=link_to laptime.laptime, laptime_path(laptime)%> in <%=link_to laptime.season.year, season_path(laptime.season)%> at <%=link_to laptime.circuit.name, circuit_path(laptime.circuit)%> </li>
  <% end %>
</ul>
